{
	"compilerOptions": {
		"module": "esnext",
		"moduleResolution": "node",
		"target": "es2017",
		"lib": ["esnext"],
		"baseUrl": ".",

		"strict": true,
		"allowJs": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"noUncheckedIndexedAccess": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"isolatedModules": true
	},
	"include": ["./src/**/*.ts"],
	"exclude": ["node_modules"]
}
